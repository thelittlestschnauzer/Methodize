


<div class="row">
  <div class="col-sm-6">
    <h1>Lists</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_list_path, class: 'btn btn-primary' do %>
    Add New List
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Position</th>
            
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <%= content_tag :tr, id: dom_id(list), class: dom_class(list) do %>
          
            <td><%= link_to list.name, list %></td>
          

                      <td><%= list.position %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
